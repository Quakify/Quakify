<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>QUAKIFY Media Player</title>
  <style>
    body {
      background-color: #5C0;
      color: #FFFFFF;
      font-family: 'Segoe UI', sans-serif;
      text-align: center;
      padding: 50px;
    }
    h1 {
      font-size: 3em;
      color: #FFFFFF;
    }
    video, audio {
      width: 80%;
      max-width: 600px;
      margin: 20px auto;
      display: block;
      border: 2px solid #FFFFFF;
      border-radius: 10px;
    }
    input[type="file"] {
      margin-top: 20px;
      color: #FFFFFF;
    }
  </style>
</head>
<body>
  <h1>QUAKIFY</h1>
  <input type="file" id="fileInput" accept=".mp3,.avi,.mpg">
  <video id="videoPlayer" controls hidden></video>
  <audio id="audioPlayer" controls hidden></audio>

  <script>
    const fileInput = document.getElementById('fileInput');
    const videoPlayer = document.getElementById('videoPlayer');
    const audioPlayer = document.getElementById('audioPlayer');

    fileInput.addEventListener('change', function () {
      const file = this.files[0];
      if (!file) return;

      const url = URL.createObjectURL(file);

      // Reset players
      videoPlayer.hidden = true;
      audioPlayer.hidden = true;
      videoPlayer.src = '';
      audioPlayer.src = '';

      if (file.name.endsWith('.mp3') || file.type.startsWith('audio')) {
        audioPlayer.src = url;
        audioPlayer.hidden = false;
        audioPlayer.play();
      } else if (file.name.endsWith('.avi') || file.name.endsWith('.mpg') || file.type.startsWith('video')) {
        videoPlayer.src = url;
        videoPlayer.hidden = false;
        videoPlayer.play();
      } else {
        alert('Unsupported file type. Please upload MP3, AVI, or MPG.');
      }
    });
  </script>
</body>
</html>
